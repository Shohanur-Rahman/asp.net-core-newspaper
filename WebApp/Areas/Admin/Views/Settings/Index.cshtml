@model App.Models.VMModels.VMNewsPaperSettings
@{
    ViewData["Title"] = "Home Categories";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Home Categories</h4>

        <div class="page-title-right">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Home Categories</li>
            </ol>
        </div>

    </div>
</div>

<div class="col-12">
    <form class="w-100" method="post" asp-action="home-categories" asp-area="admin" asp-controller="settings" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="card">
            <h5 class="card-header">Home Categories</h5>
            <div class="card-body">
                <div class="form-group">
                    <label>Category 1</label>
                    @Html.DropDownListFor(m => m.HomeNewsCategory1, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "-- Please Select --", new { @class = "form-control", required= "required" })
                </div>

                <div class="form-group">
                    <label>Category 2</label>
                    @Html.DropDownListFor(m => m.HomeNewsCategory2, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "-- Please Select --", new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    <label>Category 3</label>
                    @Html.DropDownListFor(m => m.HomeNewsCategory3, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "-- Please Select --", new { @class = "form-control", required = "required" })
                </div>

                <a asp-action="" asp-area="admin" asp-controller="categories" class="btn btn-danger waves-effect waves-light">Back</a>
                <button type="submit" class="btn btn-success waves-effect waves-light float-right">Save</button>
            </div>
        </div>
    </form>
</div>
