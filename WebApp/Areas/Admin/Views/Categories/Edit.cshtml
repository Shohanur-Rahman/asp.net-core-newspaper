@model App.Models.VMModels.VMNewsChildModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Edit Category</h4>

        <div class="page-title-right">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="categories">News Categories</a></li>
                <li class="breadcrumb-item active">Edit Category</li>
            </ol>
        </div>

    </div>
</div>

<div class="col-12">
    <form class="w-100" method="post" asp-action="create" asp-area="admin" asp-controller="categories" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="card">
            <h5 class="card-header">Edit Category</h5>
            <div class="card-body">
                <div class="form-group mb-0">
                    <label>Publish</label>
                    <br>
                    <input type="checkbox" id="chkIsPublished" aria-label="Notifications Switch" asp-for="IsPublished" />
                </div>

                <div class="form-group">
                    <label for="simpleinput">Name</label>
                    <input type="text" id="simpleinput" class="form-control" placeholder="Enter category name" asp-for="CategoryName" required>
                </div>
                <div class="form-group">
                    <label>Parent</label>
                    @Html.DropDownListFor(m => m.ParentId, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "-- Please Select --", new { @class = "form-control" })
                </div>

                <a asp-action="" asp-area="admin" asp-controller="categories" class="btn btn-danger waves-effect waves-light">Back</a>
                <button type="submit" class="btn btn-success waves-effect waves-light float-right">Save</button>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#chkIsPublished").kendoSwitch({
            messages: {
                checked: "YES",
                unchecked: "NO"
            }
        });
    })
</script>