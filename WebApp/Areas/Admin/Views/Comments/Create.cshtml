@model App.Models.VMModels.VMNewsComments
@{
    ViewData["Title"] = "Create Comment";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Create Comment</h4>

        <div class="page-title-right">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="comments">Comments</a></li>
                <li class="breadcrumb-item active">Create Comment</li>
            </ol>
        </div>

    </div>
</div>

<div class="col-12">
    <form class="w-100" method="post" asp-action="create" asp-area="admin" asp-controller="comments" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="card">
            <h5 class="card-header">Create Comment</h5>
            <div class="card-body">
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>News ID</label>
                            <input type="number" class="form-control" asp-for="NewsId" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Approve</label>
                            <br>
                            <input type="checkbox" class="k_switch" asp-for="IsApprove" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Comments</label>
                    <textarea class="form-control" placeholder="Type your comments" asp-for="Comments" style="min-height: 150px;" required></textarea>
                </div>

                <a asp-action="" asp-area="admin" asp-controller="comments" class="btn btn-danger waves-effect waves-light">Back</a>
                <button type="submit" class="btn btn-success waves-effect waves-light float-right">Save</button>
            </div>
        </div>
    </form>
</div>

