@model App.Models.VMModels.VMUserProfileModel
@{
    ViewData["Title"] = User.Identity.Name + " Profile";
}

<div class="col-12">
    <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">@User.Identity.Name's Profile</h4>

        <div class="page-title-right">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a asp-action="" asp-area="admin" asp-controller="dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">@User.Identity.Name</li>
            </ol>
        </div>

    </div>
</div>
<form class="w-100" method="post" asp-action="create" asp-area="admin" asp-controller="profile" enctype="multipart/form-data">
    <div class="row">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="col-6 d-flex">
            <div class="card">
                <h5 class="card-header">Personal Information</h5>
                <div class="card-body">
                    <div class="form-group">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a asp-action="activities" asp-area="admin" asp-controller="profile" class="link-btn">Activities</a>
                            <a asp-action="change-password" asp-area="admin" asp-controller="profile" class="link-btn">Change Password</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtDisplayName">Display name</label>
                                <input type="text" id="txtDisplayName" class="form-control" placeholder="Display name" asp-for="DisplayName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtFirstName">First name</label>
                                <input type="text" id="txtFirstName" class="form-control" placeholder="Enter first name" asp-for="FirstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtLastName">Last name</label>
                                <input type="text" id="txtLastName" class="form-control" placeholder="Enter last name" asp-for="LastName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtEmail">Email</label>
                                <input type="email" id="txtEmail" class="form-control" placeholder="Enter email" asp-for="SecondaryEmail" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtMobile">Mobile</label>
                                <input type="text" id="txtMobile" class="form-control" placeholder="Enter primary mobile" asp-for="PrimaryMobile" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtSecondaryMobile">Mobile 2</label>
                                <input type="text" id="txtSecondaryMobile" class="form-control" placeholder="Enter secondary mobile" asp-for="SecondaryMobile">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtNID">NID</label>
                                <input type="text" id="txtNID" class="form-control" placeholder="Enter your NID" asp-for="NID">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 d-flex">
            <div class="card">
                <h5 class="card-header">Address</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtCity">City</label>
                                <input type="text" id="txtCity" class="form-control" placeholder="Enter city" asp-for="City" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtStreet">Street</label>
                                <input type="text" id="txtStreet" class="form-control" placeholder="Enter street" asp-for="Street">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="txtHouse">House</label>
                                <input type="text" id="txtHouse" class="form-control" placeholder="Enter house" asp-for="House">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="txtRoad">Road</label>
                                <input type="text" id="txtRoad" class="form-control" placeholder="Enter road" asp-for="Road">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="txtCountry">Country</label>
                                <input type="text" id="txtCountry" class="form-control" placeholder="Enter country" asp-for="Country" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="txtAddressDetails">Address</label>
                                <textarea id="txtAddressDetails" class="form-control" placeholder="Enter complete address" asp-for="AddressDetails" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <h5 class="card-header">BIO</h5>
                <div class="card-body">
                    <div class="form-group">
                        <textarea asp-for="UserBio" class="form-control" required></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <h5 class="card-header">Describe Yourself</h5>
                <div class="card-body">
                    <div class="form-group">
                        <textarea asp-for="ProfileDescription" class="k_editor"></textarea>
                    </div>
                    <a asp-action="" asp-area="admin" asp-controller="dashboard" class="btn btn-danger waves-effect waves-light">Back</a>
                    <button type="submit" class="btn btn-success waves-effect waves-light float-right">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
